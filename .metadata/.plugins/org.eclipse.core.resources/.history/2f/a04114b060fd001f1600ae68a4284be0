<!-- ○ 탑텐 홍대점 -->
<!-- 37.557913, 126.925766 -->

<!-- ○ 국회의사당 -->
<!-- 37.531932, 126.914144 -->

<div>
	<h1>Kakao Map 기본 컨트롤 구성</h1>
	<hr>
</div>

<!-- 지도를 그릴 div -->
<div id="map" style="width: 100%; height: 400px;"></div>

</body>
